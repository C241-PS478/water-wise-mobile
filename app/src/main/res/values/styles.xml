<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Text appearance-->
    <style name="header_24">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="subheader16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">?attr/textFillColor</item>
    </style>
    <style name="blue_subheader16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="regular12">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Box appearance-->
    <style name="rounded_full">
        <item name="cornerSize">50%</item>
    </style>

    <style name="rounded_20">
        <item name="cornerSize">20%</item>
    </style>

    <style name="gradient_color_vertical">
        <item name="android:startColor">@color/primary_100</item>
        <item name="android:endColor">@color/primary_200</item>
        <item name="android:angle">90</item>
    </style>

    <style name="rounded_full_bg_white">
        <item name="android:background">@drawable/rounded_bg_white</item>
    </style>

    <style name="ShapeAppearanceOverlay.TextInputLayout.Rounded" parent="">
        <item name="cornerSize">16dp</item>
    </style>
    <style name="ShapeAppearanceOverlay.MapsFragment.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75%</item>
    </style>

    <style name="Widget.Theme.WaterWise.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>
</resources>
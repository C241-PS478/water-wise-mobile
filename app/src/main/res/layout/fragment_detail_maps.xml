<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxHeight="300dp"
    android:paddingVertical="32dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/background_fragment_maps">

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Author Name" />

    <TextView
        android:id="@+id/date_posted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintStart_toStarOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/author_name"
        tools:text="18-02-2022" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/data_prediction_layout"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/date_posted"
        android:background="@drawable/button_google_rounded">

        <ImageView
            android:id="@+id/water_image"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_water_droplets"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0" />

        <TextView
            android:id="@+id/cleanliness_percentage_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/water_image"
            app:layout_constraintEnd_toStartOf="@+id/result"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cleanliness_label"
            app:layout_constraintHorizontal_bias="0.5"
            tools:text="70%"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cleanliness_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Cleanliness"
            android:textColor="#7A7A7A"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/cleanliness_percentage_result"
            app:layout_constraintStart_toEndOf="@id/water_image"
            app:layout_constraintEnd_toStartOf="@id/result"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/success_badge"
            android:fontFamily="@font/poppins_bold"
            android:paddingHorizontal="26dp"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@id/cleanliness_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1"
            tools:text="Drinkable"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/like_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_love"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_prediction_layout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/like_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/like_button"
        tools:text="count like" />

</androidx.constraintlayout.widget.ConstraintLayout>